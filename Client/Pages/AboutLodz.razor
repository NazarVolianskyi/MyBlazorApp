<p role="status">Ocena: @currentMark</p>

@if (currentMark >= 1 && currentMark <= 5)
{
    <p> Ocena @GetMarkDescription(currentMark).</p>
}

<button class="btn btn-primary" @onclick="IncrementMark" disabled="@IsMarkMax">Increase</button>
<button class="btn btn-primary" @onclick="DecrementMark" disabled="@IsMarkMin">Decrease</button>

@code {
    private int currentMark = 0;
    private bool IsMarkMax => currentMark >= 5;
    private bool IsMarkMin => currentMark <= 1;

    private string GetMarkDescription(int mark)
    {
        switch (mark)
        {
            case 1:
                return "bardzo słaba";
            case 2:
                return "słaba";
            case 3:
                return "średnia";
            case 4:
                return "dobra";
            case 5:
                return "bardzo dobra";
            default:
                return "-//-";
        }
    }
    
    private void IncrementMark()
    {
        if (currentMark < 5)
        {
            currentMark++;
        }
    }

    private void DecrementMark()
    {
        if (currentMark > 1)
        {
            currentMark--;
        }
    }
}

